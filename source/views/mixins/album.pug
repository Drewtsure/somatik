mixin album(album)
  li.grid__item
    a.grid__link(href=album.href || 'page-in-progress.html')
      img.albums__img.grid__img--square(src=album.image alt=album.name width='300' height='300')
      h3.grid__subtitle= album.authors.map((it) => it.nickname).join(', ')
      h2.grid__title= album.name

