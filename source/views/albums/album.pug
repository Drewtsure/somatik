extends ../layout
include ../mixins/header
include ../mixins/social
include ../mixins/player

block header
  +header(`Album: ${album.name}`)
block main
  .album
    h1.album__name=album.name
    img.album__img(src=album.image alt=album.name width='400' height='400')
    if album.social
      .album__social
        .artist__social
          each url, type in album.social
            +social(type, url)
    h2.album__author
      each author in album.authors
        a.albums__link(href=author.href)
          =author.nickname
    h2.album__release-date Release date: #{album.date}
  +player(album.url, '100%', 450)
